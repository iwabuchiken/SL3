<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/dlg_edit_items_tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        
		<TableRow >
	        <TextView
	            android:id="@+id/dlg_edit_items_tv_store"
	            style="@style/tv_basic_1" 
	            android:text="@string/v1_tv_store"
	            />
	
	        <Spinner
	            android:id="@+id/dlg_edit_items_sp_store"
	            
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            
	            android:textSize="25sp"
	            
	            android:layout_weight="1" 
	            />
		</TableRow>

		<TableRow >
			<TextView
	            android:id="@+id/dlg_edit_items_tv_name"
	            style="@style/tv_basic_1" 
	            android:text="@string/v1_tv_item"
	            />
	
	        <EditText
	            android:id="@+id/dlg_edit_items_et_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minWidth="200dp"
	            android:textSize="25sp" 
	            
	            android:inputType="text"
	            />
		</TableRow>

		<TableRow >	
	        <TextView
	            android:id="@+id/dlg_edit_items_tv_yomi"
	            style="@style/tv_basic_1" 
	            android:text="@string/v1_tv_yomi"
	            />
	
	        <EditText
	            android:id="@+id/dlg_edit_items_et_yomi"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minWidth="200dp"
	            android:textSize="25sp" 
	            
	            android:inputType="text"
	            />
	    </TableRow>

	    <TableRow >	
	        <TextView
	            android:id="@+id/dlg_edit_items_tv_price"
	            style="@style/tv_basic_1" 
	            android:text="@string/v1_tv_price"
	            />
	
	        <EditText
	            android:id="@+id/dlg_edit_items_et_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:minWidth="200dp"
	            android:textSize="25sp" 
	            
	            android:inputType="number"
	            />
	    </TableRow>

	    <TableRow>

	        <TextView
	            android:id="@+id/dlg_edit_items_tv_genre"
	            style="@style/tv_basic_1"
	            android:text="@string/v1_tv_genre" />

	        <Spinner
	            android:id="@+id/dlg_edit_items_sp_genre"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:textSize="25sp" />
	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/dlg_edit_items_tv_num"
	            style="@style/tv_basic_1"
	            android:text="@string/v1_tv_num" />

	        <EditText
	            android:id="@+id/dlg_edit_items_et_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:ems="10"
	            android:textSize="25sp" >

	            <requestFocus />
	        </EditText>

	    </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dlg_edit_items_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/v1_btn_register"
            android:textSize="25sp" />

        <Button
            android:id="@+id/dlg_edit_items_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/generic_cancel"
            android:textColor="@color/red"
            android:textSize="25sp" />

    </LinearLayout>    
</LinearLayout>