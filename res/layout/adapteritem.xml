<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/adapteritem_LL_root">

    <LinearLayout
        android:id="@+id/adapteritem_LL_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/adapteritem_tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/adapteritem_tv_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="3dp"
            android:background="@color/yellow_pale_bright"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/adapteritem_LL_store_and_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapteritem_tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            
            android:layout_weight="1"
            
            />

        <TextView
            android:id="@+id/adapteritem_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            
            android:layout_weight="1"
            
            />

        <TextView
            android:id="@+id/adapteritem_tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            
            android:layout_weight="1"
            
            />

    </LinearLayout>

</LinearLayout>